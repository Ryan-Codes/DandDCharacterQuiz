<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="author" content="Ryan Reeves">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            Log In
        </title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@400;700;900&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" type="text/css" href="/styles/style.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    DND Character Quiz
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">
                                Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/quiz">
                                Quiz
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="profile">
            <h1 id="profile-greeting">
                Hello <%= username %>
            </h1>
            <header class="hero-section">
                <div class="profile-picture">
                    <img src=<%= pfp %> id="hero-image">
                    <input type="file" id="userImage" name="image">
                    <label for="userImage" id="uploadButton">
                        <i class="bi bi-camera"></i>
                    </label>
                </div>
            </header>
            <section class="editable" id="aboutMe" onClick="makeEditable(this)">
                <p id="aboutMeContent">
                    <%= bio %>
                </p>
            </section>
            <section id="user-options">
                <button class="user-options-btn" id="builds-btn">
                    My Builds
                </button>
                <div id="sectionToToggle" class="hidden">
                    <h3>
                        My Builds
                    </h3>
                    <table class="build-table">
                        <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Level
                            </th>
                            <th>
                                Strength
                            </th>
                            <th>
                                Dexterity
                            </th>
                            <th>
                                Constitution
                            </th>
                            <th>
                                Inteligence
                            </th>
                            <th>
                                Wisdom
                            </th>
                            <th>
                                Charisma
                            </th>
                            <th>
                                Background
                            </th>
                            <th>
                                Equipment
                            </th>
                            <th>
                                Languages
                            </th>
                            <th>
                                Proficiencies
                            </th>
                        </tr>
                    </thead>
                    <tbody>
<%
    for(const build of builds)
    {
%>
                        <tr>
                            <th>
                                <%= build.name %>
                            </th>
                            <th>
                                <%= build.level %>
                            </th>
                            <th>
                                <%= build.str %> (<%= statModifiers[build.str - 1] > 0 ? "+" : "" %><%= statModifiers[build.str - 1] %>)
                            </th>
                            <th>
                                <%= build.dex %> (<%= statModifiers[build.dex - 1] > 0 ? "+" : "" %><%= statModifiers[build.dex - 1] %>)
                            </th>
                            <th>
                                <%= build.con %> (<%= statModifiers[build.con - 1] > 0 ? "+" : "" %><%= statModifiers[build.con - 1] %>)
                            </th>
                            <th>
                                <%= build.int %> (<%= statModifiers[build.int - 1] > 0 ? "+" : "" %><%= statModifiers[build.int - 1] %>)
                            </th>
                            <th>
                                <%= build.wis %> (<%= statModifiers[build.wis - 1] > 0 ? "+" : "" %><%= statModifiers[build.wis - 1] %>)
                            </th>
                            <th>
                                <%= build.cha %> (<%= statModifiers[build.cha - 1] > 0 ? "+" : "" %><%= statModifiers[build.cha - 1] %>)
                            </th>
                            <th>
                                <%= build.Background %>
                            </th>
                            <th>
                                <%= build.Equipment.join(", ") %>
                            </th>
                            <th>
                                <%= build.Languages.join(", ") %>
                            </th>
                            <th>
                                <%= build.Proficiencies.join(", ") %>
                            </th>
                        </tr>
<%
    }
%>
                    </tbody>
                    </table>
                    
                </div>
                <form id="logoutForm" action="/logout" method="post">
                    <input type="submit" class="user-options-btn" id="logout-btn" name="logout" value="logout">
                </form>
                <br>
            </section>
        </div>
        <script Content-Type="application/javascript" src="/scripts/makeEditable.js"></script>
        <script Content-Type="application/javascript" src="/scripts/toggleBuilds.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>